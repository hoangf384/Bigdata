# .env.template
TZ=Asia/Ho_Chi_Minh
# ------------------------------------------------------------------------------
# Spark Configuration
# ------------------------------------------------------------------------------
# SPARK_MASTER: spark://spark-master:7077 (Local Docker) or yarn (Dataproc)
SPARK_MASTER=spark://spark-master:7077

# ------------------------------------------------------------------------------
# MySQL Configuration
# ------------------------------------------------------------------------------
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=mydb
MYSQL_USER=user
MYSQL_PASSWORD=password
# ------------------------------------------------------------------------------
# Metabase Configuration
# ------------------------------------------------------------------------------
DB_NAME=metabase
DB_USER=metabase
DB_PASSWORD=metabase
DB_DATA_DIR=/var/lib/postgresql/data
# ------------------------------------------------------------------------------
# Pipeline 1: Log Content Paths
# ------------------------------------------------------------------------------
# Local: data/raw/log_content/
# GCP: gs://your-bucket/raw/log_content/
LOG_CONTENT_RAW_PATH=data/raw/log_content/
LOG_CONTENT_DEST_PATH=data/destination/log_content/

# ------------------------------------------------------------------------------
# Pipeline 2: Log Search Paths
# ------------------------------------------------------------------------------
# Local: /data/raw/log_search/
# GCP: gs://your-bucket/raw/log_search/
LOG_SEARCH_RAW_PATH=/data/raw/log_search/
LOG_SEARCH_DEST_PATH=/data/destination/log_search/

# ------------------------------------------------------------------------------
# LLM Enrichment (OpenAI)
# ------------------------------------------------------------------------------
# Required for pipelines/log_search/enrich_v1.py
OPENAI_API_KEY=your_openai_api_key_here
